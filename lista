/*------------------------------------------------------------------------------------------------------------*/

void cria(ListaLDE *l){

    l->inicio = NULL;
    l->fim = NULL;
    l->tam = 0;
}

int insere(ListaLDE *l, casal *C){

    // alocando no na memoria e checando se deu certo
    No *aux = (No *) malloc(sizeof(No));
    if(aux == NULL)
        return 0;

    // guardando o dado e incrementando o tamanho da lista
    aux->casal = C;
    l->tam++;

 /*primeiro elemento */
    if(l->inicio == NULL){

        //todos apontam para o unico no existente
        l->inicio = aux;
        l->fim = aux;
        aux->ant = l->fim;
        aux->prox = l->inicio;

        return 1;
    }
    return 1;
}

int verifica(ListaLDE l, casal *C, char ID){
    No *aux;

    aux = l.inicio;
    while(aux->prox != NULL){
        aux = aux->prox;
        if(C->ID == aux->ID){
            printf("Casal encontrado!\n");
            return 1;
        }
        if(aux->prox == NULL && aux->ID != ID);
        printf("Casal nao encontrado\n");
        return 0;
    }
    return 0;
}

int retira(ListaLDE *l, casal *C, char ID){

    No *aux ;

    if(l->inicio == NULL){
        printf("Lista vazia\n");
        return 0;
    }

    /* 1o caso: lista unitaria */
    if((C->ID == l->inicio->ID) && (l->inicio == l->fim)) {

        aux = l->inicio; // aux aponta para o no que vou remover
        l->inicio = NULL; //inicio aponta pra null
        l->fim = NULL; // fim aponta pra null
        free(aux); // libero a memoria
        printf("Dado unitario removido com sucesso.\n");
        l->tam--;

        return 1;
    }

    /* 2o caso: removendo primeiro elemento */

    /*
